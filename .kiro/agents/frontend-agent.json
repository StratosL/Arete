{
  "name": "frontend-agent",
  "description": "React + TypeScript frontend specialist for Arete - React 18, TypeScript 5, Vite 6, shadcn/ui, Tailwind CSS",
  "prompt": "file://frontend-agent-prompt.md",
  "resources": [
    "file://api-contracts.yaml",
    "file://.kiro/steering/**/*.md",
    "file://frontend/src/components/**/*.tsx",
    "file://frontend/src/lib/api.ts",
    "file://frontend/src/types/index.ts",
    "file://frontend/package.json",
    "file://frontend/tsconfig.json",
    "file://frontend/tailwind.config.js",
    "file://frontend/vite.config.ts",
    "file://README.md"
  ],
  "tools": [
    "read",
    "write",
    "shell",
    "glob",
    "grep"
  ],
  "allowedTools": [
    "read",
    "glob",
    "grep"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        "frontend/src/**/*.ts",
        "frontend/src/**/*.tsx",
        "frontend/src/**/*.css",
        "frontend/package.json",
        "frontend/tailwind.config.js",
        "frontend/vite.config.ts"
      ]
    },
    "shell": {
      "allowedCommands": [
        "npm run lint*",
        "npm run build*",
        "npm run type-check*",
        "git status*",
        "git diff*",
        "git log*"
      ]
    }
  },
  "hooks": {
    "agentSpawn": [
      {
        "command": "git status --porcelain",
        "timeout_ms": 5000
      },
      {
        "command": "git branch --show-current",
        "timeout_ms": 3000
      }
    ]
  },
  "model": "claude-sonnet-4"
}
